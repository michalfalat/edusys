      button{
      padding: 1rem 2rem;
      background: #03a9f4;
      cursor: pointer;
      color: white;
      outline: 0 !important;
      border: none;
      border-radius: 0.5rem;
      font-size: 1rem;
      }
      button a {
      color: inherit;
      text-decoration: none;
      }
      a, a: link, a:visited, a:hover,a:active {
      color: grey;
      }
      .left {
      text-align: left;
      }
      .right {
      text-align: right;
      }
